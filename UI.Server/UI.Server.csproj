<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
        <RootNamespace>LaPelicula.UI.Server</RootNamespace>
        <AssemblyName>LaPelicula.UI.Server</AssemblyName>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="CSnakes.Runtime" Version="1.1.0" />
      <PackageReference Include="CsvHelper" Version="33.1.0" />
      <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.Server" Version="9.0.7" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="ml\training.py" />
      <None Remove="ml\recommendation_system.py" />
      <None Update="ml\data\content_bygenre_df.csv">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </None>
      <None Update="ml\data\content_item_train.csv">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </None>
      <None Update="ml\data\content_item_train_header.txt">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </None>
      <None Update="ml\data\content_item_vecs.csv">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </None>
      <None Update="ml\data\content_movie_list.csv">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </None>
      <None Update="ml\data\content_user_train.csv">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </None>
      <None Update="ml\data\content_user_train_header.txt">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </None>
      <None Update="ml\data\content_y_train.csv">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </None>
      <None Update="ml\requirements.txt">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
      <None Update="ml\data\links.csv">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </None>
      <None Update="ml\data\movies.csv">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </None>
      <None Update="ml\data\ratings.csv">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </None>
      <None Update="ml\data\tags.csv">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </None>
      <None Update="ml\data\additional_movie_attributes.csv">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </None>
      <None Update="ml\data\top200_movies.csv">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </None>
      <None Update="ml\tmdb.py">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
    </ItemGroup>

    <ItemGroup>
      <AdditionalFiles Include="Components\Pages\Layout\MainLayout.razor" />
      <AdditionalFiles Include="ml\recommendation_system.py">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </AdditionalFiles>
    </ItemGroup>

    <ItemGroup>
      <None Remove="ml\data_pipeline.py" />
      <Content Include="..\.dockerignore">
        <Link>.dockerignore</Link>
      </Content>
      <Content Include="ml\data_pipeline.py">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </Content>
      <None Remove="ml\features.py" />
      <Content Include="ml\features.py">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </Content>
      <None Remove="ml\model.py" />
      <Content Include="ml\model.py">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </Content>
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\UI.Client\UI.Client.csproj" />
      <ProjectReference Include="..\UI.Shared\UI.Shared.csproj" />
    </ItemGroup>


    <ItemGroup>
      <Folder Include="wwwroot\images\" />
    </ItemGroup>


    <ItemGroup>
      <_ContentIncludedByDefault Remove="wwwroot\lib\MoviesSlideshow\dist\component.bundle.js" />
      <_ContentIncludedByDefault Remove="wwwroot\lib\MoviesSlideshow\dist\component.bundle.js.map" />
    </ItemGroup>

    <Target Name="EchoPlatformAndConfiguration" BeforeTargets="BeforeBuild">
        <Message Text="Configuration is: $(Configuration)" Importance="High" />
        <Message Text="Platform is: $(Platform)" Importance="High" />
    </Target>
    
    <Target Name="NpmBuildDebug" BeforeTargets="BeforeBuild" Condition="'$(Configuration.ToLower())'=='debug'">
        <Exec Command="npm install" />
        <Exec Command="npm run build-dev" />
    </Target>

    <Target Name="NpmBuildRelease" BeforeTargets="BeforeBuild" Condition="'$(Configuration.ToLower())'=='release'">
        <Exec Command="npm install" />
        <Exec Command="npm run build" />
    </Target>
    
</Project>
